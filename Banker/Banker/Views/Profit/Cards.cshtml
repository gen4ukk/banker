@model List<Banker.Models.Profit.CardsModel>

@{
    ViewBag.Title = "Index";
}

@section scripts {

}
<br />
<h2>Index</h2>
<br />

<div class="row">
    <div class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="tab-cards" data-toggle="pill" href="#v-pills-cards" role="tab" aria-controls="v-pills-cards" aria-selected="true">Cards</a>
            @Html.ActionLink("Profit", "Profit", "Profit", routeValues: null, htmlAttributes: new { id = "tab-profit", @class = "nav-link", role = "tab" })
        </div>
    </div>
    <div class="col-9">

        <button type="button" class="btn btn-primary mr-1 mb-3 float-right">Delete</button>
        <button type="button" class="btn btn-primary mr-1 mb-3 float-right">Modify</button>
        <button type="button" class="btn btn-primary mr-1 mb-3 float-right">Add</button>


        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-cards" role="tabpanel" aria-labelledby="tab-cards">
                @{
                    WebGrid grid = new WebGrid(Model, rowsPerPage: 5, canPage: true);
                }
                @grid.Table(
                headerStyle : "thead-dark",
                columns :
                grid.Columns(
                            grid.Column("Id"),
                            grid.Column("Name"),
                            grid.Column("Number"),
                            grid.Column("Balans"),
                            grid.Column("Description")),
                tableStyle: "table table-bordered table-hover"
                )

                @grid.PagerList(paginationStyle: "pagination justify-content-end")
            </div>
        </div>
    </div>
</div>
